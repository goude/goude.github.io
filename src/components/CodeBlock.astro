---
import { createHighlighter } from "shiki";

const { code, lang = "bash", maxHeight = "60vh" } = Astro.props;

const highlighter = await createHighlighter({
  themes: ["github-dark", "github-light"],
  langs: [lang],
});

const rawHtml = highlighter.codeToHtml(code, {
  lang,
  themes: {
    dark: "github-dark",
    light: "github-light",
  },
});

// Extract inner <code> only
const inner = rawHtml
  .replace(/^.*?<code[^>]*>/s, "")
  .replace(/<\/code>.*$/s, "");

const lines = inner.split("\n");
---

<div class="code-wrapper">
  <button
    class="copy-btn"
    onclick="
      navigator.clipboard.writeText(this.dataset.code);
      this.textContent='✓';
      setTimeout(()=>this.textContent='⧉',1200);
    "
    data-code={code}
    aria-label="Copy code"
    title="Copy"
  >
    ⧉
  </button>

  <pre
    class="code"
    style={`max-height:${maxHeight}`}>
    {lines.map((line, i) => (
      <div class="line">
        <span class="ln">{i + 1}</span>
        <span class="lc" set:html={line || " "} />
      </div>
    ))}
  </pre>
</div>

<style>
  .code-wrapper {
    position: relative;
    border: 1px solid var(--border);
    border-radius: 6px;
    overflow: hidden;
    background: var(--surface);
  }

  .copy-btn {
    position: absolute;
    top: 0.5rem;

    /* clear the scrollbar area (esp. non-overlay scrollbars) */
    right: 1.25rem;

    background: var(--bg);
    color: var(--fg);
    border: none;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    cursor: pointer;
    opacity: 0.7;
    border-radius: 4px;
    z-index: 2;
  }

  .copy-btn:hover {
    opacity: 1;
  }

  .code {
    /* Vertical scroll only; you chose hidden for x for now */
    overflow-y: auto;
    overflow-x: hidden;

    /* Kill default <pre> margin and ensure background fills */
    margin: 0;

    padding: 1rem;
    font-size: 0.85rem;
    font-family: var(--font-mono);

    background: var(--surface);
  }

  .line {
    display: grid;
    grid-template-columns: 3ch minmax(0, 1fr);
    gap: 1rem;
    align-items: start;
  }

  .line:hover {
    background: var(--accent-dim);
  }

  @media (prefers-color-scheme: dark) {
    .line:hover {
      background: rgba(255, 255, 255, 0.05);
    }
  }

  .ln {
    opacity: 0.4;
    text-align: right;
    user-select: none;
    position: sticky;
    left: 0;

    /* Keep gutter readable and continuous during horizontal scroll */
    background: var(--surface);
  }

  .lc {
    white-space: pre;
  }
</style>
