---
import { createHighlighter } from "shiki";

const { code, lang = "bash", maxHeight = "60vh" } = Astro.props;

const highlighter = await createHighlighter({
  themes: ["github-dark", "github-light"],
  langs: [lang],
});

const rawHtml = highlighter.codeToHtml(code, {
  lang,
  themes: {
    dark: "github-dark",
    light: "github-light",
  },
});
---

<div class="code-wrapper">
  <button
    class="copy-btn"
    onclick="
      navigator.clipboard.writeText(this.dataset.code);
      this.textContent='✓';
      setTimeout(()=>this.textContent='⧉',1200);
    "
    data-code={code}
    aria-label="Copy code"
    title="Copy"
  >
    ⧉
  </button>

  <div class="code" style={`max-height:${maxHeight}`} set:html={rawHtml} />
</div>

<style>
  /*
  Shiki emits light colors inline and dark colors as --shiki-dark* variables.
  Astro scopes component CSS, so we must use :global() to override Shiki's
  inline light styles when <html data-theme-dark> is active.
  */
  :global(html[data-theme-dark] pre.shiki) {
    background-color: var(--shiki-dark-bg) !important;
    color: var(--shiki-dark) !important;
  }

  :global(html[data-theme-dark] pre.shiki span[style*="--shiki-dark"]) {
    color: var(--shiki-dark) !important;
  }
  .code-wrapper {
    position: relative;
    border: 1px solid var(--border);
    border-radius: 6px;
    overflow: hidden;
    background: var(--surface);
  }

  .copy-btn {
    position: absolute;
    top: 0.5rem;
    right: 1.25rem;
    background: var(--bg);
    color: var(--fg);
    border: none;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    cursor: pointer;
    opacity: 0.7;
    border-radius: 4px;
    z-index: 2;
  }

  .copy-btn:hover {
    opacity: 1;
  }

  .code {
    overflow-y: auto;
    overflow-x: auto;
    margin: 0;
  }

  /* Style Shiki output */
  .code pre {
    margin: 0;
    padding: 1rem 1rem 1rem 4rem;
    font-size: 0.85rem;
    font-family: var(--font-mono);
    counter-reset: line;
  }

  /* Each line emitted by Shiki */
  .code pre > code > span {
    display: block;
    counter-increment: line;
    position: relative;
  }

  /* Line numbers */
  .code pre > code > span::before {
    content: counter(line);
    position: absolute;
    left: -3rem;
    width: 2rem;
    text-align: right;
    opacity: 0.4;
    user-select: none;
  }
</style>
