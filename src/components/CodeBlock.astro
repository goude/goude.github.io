---
import { createHighlighter } from "shiki";

const { code, lang = "bash", maxHeight = "60vh" } = Astro.props;

const highlighter = await createHighlighter({
  themes: ["github-dark", "github-light"],
  langs: [lang],
});

const rawHtml = highlighter.codeToHtml(code, {
  lang,
  themes: {
    dark: "github-dark",
    light: "github-light",
  },
});
---

<div class="code-wrapper" data-code-block>
  <button
    class="menu-btn"
    id="code-menu-btn"
    aria-label="Code options"
    title="Options"
  >
    ⋯
  </button>

  <div class="menu-panel" id="code-menu">
    <button data-action="copy">Copy</button>
    <button data-action="wrap">Toggle wrap</button>
    <button data-action="numbers">Toggle numbers</button>
    <button data-action="relative">Toggle relative</button>
  </div>

  <div
    class="code show-absolute"
    style={`max-height:${maxHeight}`}
    set:html={rawHtml}
  />
</div>

<style>
  /*
  Shiki emits light colors inline and dark colors as --shiki-dark* variables.
  Astro scopes component CSS, so we must use :global() to override Shiki's
  inline light styles when <html data-theme-dark> is active.
  */
  :global(html[data-theme-dark] pre.shiki) {
    background-color: var(--shiki-dark-bg) !important;
    color: var(--shiki-dark) !important;
  }

  :global(html[data-theme-dark] pre.shiki span[style*="--shiki-dark"]) {
    color: var(--shiki-dark) !important;
  }

  .code-wrapper {
    position: relative;
    border: 1px solid var(--border);
    border-radius: 6px;
    overflow: hidden;
    background: var(--surface);
  }

  .menu-btn {
    position: absolute;
    top: 0.5rem;
    right: 1.25rem;
    background: var(--bg);
    color: var(--fg);
    border: none;
    padding: 0.25rem 0.5rem;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 4px;
    z-index: 3;
  }

  .menu-panel {
    position: absolute;
    top: 2rem;
    right: 1.25rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 6px;
    display: none;
    flex-direction: column;
    z-index: 4;
  }

  .menu-panel button {
    background: none;
    border: none;
    padding: 0.4rem 0.8rem;
    text-align: left;
    cursor: pointer;
    font-family: var(--font-ui);
  }

  .menu-panel button:hover {
    background: var(--accent-dim);
  }

  .menu-panel.open {
    display: flex;
  }

  /* .code is a scoped component element — no :global() needed */
  .code {
    overflow-x: auto;
    overflow-y: auto;
    margin: 0;
    scrollbar-width: thin;
    scrollbar-color: var(--border) transparent;
  }

  .code::-webkit-scrollbar {
    height: 4px;
    width: 4px;
  }

  .code::-webkit-scrollbar-track {
    background: transparent;
  }

  .code::-webkit-scrollbar-thumb {
    background: var(--border);
    border-radius: 2px;
  }

  /*
  Everything below targets set:html injected content (pre, code, span.line).
  Astro does NOT add scoped attributes to injected HTML, so all descendant
  selectors into that content must use :global(). We anchor on .code (scoped)
  to keep specificity local to this component.
  */

  .code :global(pre.shiki) {
    overflow: visible;
    margin: 0;
    padding: 1rem 1rem 1rem 4rem;
    font-size: 0.85rem;
    font-family: var(--font-mono);
    counter-reset: line;
  }

  .code.wrap :global(pre.shiki) {
    white-space: pre-wrap;
    word-break: break-word;
  }

  .code :global(pre > code > span.line) {
    display: block;
    counter-increment: line;
    position: relative;
  }

  .code :global(pre > code > span.line::before) {
    position: absolute;
    left: -3rem;
    width: 2rem;
    text-align: right;
    opacity: 0.4;
    user-select: none;
  }

  .code.show-absolute :global(pre > code > span.line::before) {
    content: counter(line);
  }

  .code.show-relative :global(pre > code > span.line::before) {
    content: attr(data-line);
  }

  .code.hide-numbers :global(pre > code > span.line::before) {
    content: "" !important;
  }
</style>

<script is:inline>
  (function () {
    document.querySelectorAll("[data-code-block]").forEach((wrapper) => {
      const menuBtn = wrapper.querySelector("#code-menu-btn");
      const menu = wrapper.querySelector("#code-menu");
      const codeEl = wrapper.querySelector(".code");
      if (!menuBtn || !menu || !codeEl) return;

      console.log("[CodeBlock] init — codeEl classes:", codeEl.className);

      const lines = codeEl.querySelectorAll("pre > code > span.line");
      console.log("[CodeBlock] found", lines.length, "line spans");
      lines.forEach((line, i) => {
        line.setAttribute("data-line", i + 1);
      });

      menuBtn.addEventListener("click", () => {
        menu.classList.toggle("open");
      });

      menu.addEventListener("click", (e) => {
        const action = e.target.dataset.action;
        if (!action) return;

        console.log(
          "[CodeBlock] action:",
          action,
          "| before:",
          codeEl.className
        );

        if (action === "copy") {
          navigator.clipboard.writeText(codeEl.innerText);
        }
        if (action === "wrap") {
          codeEl.classList.toggle("wrap");
        }
        if (action === "numbers") {
          codeEl.classList.toggle("hide-numbers");
        }
        if (action === "relative") {
          if (codeEl.classList.contains("show-relative")) {
            codeEl.classList.remove("show-relative");
            codeEl.classList.add("show-absolute");
          } else {
            codeEl.classList.remove("show-absolute");
            codeEl.classList.add("show-relative");
          }
        }

        console.log(
          "[CodeBlock] action:",
          action,
          "| after:",
          codeEl.className
        );
        menu.classList.remove("open");
      });

      document.addEventListener("click", (e) => {
        if (!wrapper.contains(e.target)) {
          menu.classList.remove("open");
        }
      });
    });
  })();
</script>
