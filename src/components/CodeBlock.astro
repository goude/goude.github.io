---
import { createHighlighter } from "shiki";

const { code, lang = "bash", maxHeight = "60vh" } = Astro.props;

const highlighter = await createHighlighter({
  themes: ["github-dark", "github-light"],
  langs: [lang],
});

const rawHtml = highlighter.codeToHtml(code, {
  lang,
  themes: {
    dark: "github-dark",
    light: "github-light",
  },
  transformers: [
    {
      // Inject a zero-width space into every empty line span so the
      // browser always sees a text node and gives all lines equal height.
      line(node) {
        if (node.children.length === 0) {
          node.children.push({ type: "text", value: "\u200B" });
        }
      },
    },
  ],
});
---

<div class="code-wrapper" data-code-block>
  <button
    class="menu-btn"
    id="code-menu-btn"
    aria-label="Code options"
    title="Options"
  >
    â‹¯
  </button>

  <div class="menu-panel" id="code-menu">
    <button data-action="copy">Copy</button>
    <button data-action="wrap">Toggle wrap</button>
  </div>

  <div class="code wrap" style={`max-height:${maxHeight}`} set:html={rawHtml} />
</div>

<style>
  :global(html[data-theme-dark] pre.shiki) {
    background-color: var(--shiki-dark-bg) !important;
    color: var(--shiki-dark) !important;
  }

  :global(html[data-theme-dark] pre.shiki span[style*="--shiki-dark"]) {
    color: var(--shiki-dark) !important;
  }

  .code-wrapper {
    position: relative;
    border: 1px solid var(--border);
    border-radius: 6px;
    overflow: hidden;
    background: var(--surface);
  }

  .menu-btn {
    position: absolute;
    top: 0.5rem;
    right: 1.25rem;
    background: var(--bg);
    color: var(--fg);
    border: none;
    padding: 0.25rem 0.5rem;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 4px;
    z-index: 3;
  }

  .menu-panel {
    position: absolute;
    top: 2rem;
    right: 1.25rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 6px;
    display: none;
    flex-direction: column;
    z-index: 4;
  }

  .menu-panel button {
    background: none;
    border: none;
    padding: 0.4rem 0.8rem;
    text-align: left;
    cursor: pointer;
    font-family: var(--font-ui);
  }

  .menu-panel button:hover {
    background: var(--accent-dim);
  }

  .menu-panel.open {
    display: flex;
  }

  .code {
    overflow-x: auto;
    overflow-y: auto;
    margin: 0;
    scrollbar-width: thin;
    scrollbar-color: var(--border) transparent;
  }

  .code::-webkit-scrollbar {
    height: 4px;
    width: 4px;
  }

  .code::-webkit-scrollbar-track {
    background: transparent;
  }

  .code::-webkit-scrollbar-thumb {
    background: var(--border);
    border-radius: 2px;
  }

  .code :global(pre.shiki) {
    overflow: visible;
    margin: 0;
    padding: 0.75rem 1rem 0.75rem 4rem;
    font-size: 0.85rem;
    font-family: var(--font-mono);
    line-height: 1.6;
    counter-reset: line;
  }

  .code.wrap :global(pre.shiki) {
    white-space: pre-wrap;
    word-break: break-word;
  }

  .code :global(pre > code) {
    display: block;
  }

  .code :global(pre > code > span.line) {
    display: block;
    counter-increment: line;
    position: relative;
  }

  .code :global(pre > code > span.line::before) {
    content: counter(line);
    position: absolute;
    left: -3rem;
    width: 2rem;
    text-align: right;
    opacity: 0.4;
    user-select: none;
  }
</style>

<script is:inline>
  (function () {
    document.querySelectorAll("[data-code-block]").forEach((wrapper) => {
      const menuBtn = wrapper.querySelector("#code-menu-btn");
      const menu = wrapper.querySelector("#code-menu");
      const codeEl = wrapper.querySelector(".code");
      if (!menuBtn || !menu || !codeEl) return;

      menuBtn.addEventListener("click", () => {
        menu.classList.toggle("open");
      });

      menu.addEventListener("click", (e) => {
        const action = e.target.dataset.action;
        if (!action) return;

        if (action === "copy") {
          navigator.clipboard.writeText(codeEl.innerText);
        }
        if (action === "wrap") {
          codeEl.classList.toggle("wrap");
        }

        menu.classList.remove("open");
      });

      document.addEventListener("click", (e) => {
        if (!wrapper.contains(e.target)) {
          menu.classList.remove("open");
        }
      });
    });
  })();
</script>
