---
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title="Markup Test"
  description="Comprehensive HTML rendering test page"
  current="markup"
>
  <article id="markup-test">
    <header>
      <h1>Markup Test</h1>
      <p class="subtitle">Rendering reference for semantic HTML elements.</p>

      <nav aria-label="Markup sections">
        <ul>
          <li><a href="#text">Text</a></li>
          <li><a href="#lists">Lists</a></li>
          <li><a href="#tables">Tables</a></li>
          <li><a href="#media">Media</a></li>
          <li><a href="#forms">Forms</a></li>
          <li><a href="#interactive">Interactive</a></li>
          <li><a href="#misc">Misc</a></li>
        </ul>
      </nav>
    </header>

    <!-- TEXT -->

    <section id="text">
      <h2>Text & Inline Semantics</h2>

      <p>
        <strong>strong</strong>, <em>em</em>, <b>b</b>, <i>i</i>,
        <u>u</u>, <mark>mark</mark>, <small>small</small>,
        <sub>sub</sub>, <sup>sup</sup>, <s>strikethrough</s>.
      </p>

      <p>
        <abbr title="HyperText Markup Language">HTML</abbr>,
        <cite>citation</cite>, <q>inline quote</q>,
        <bdi>مرحبا</bdi>, soft<wbr />break.
      </p>

      <p>
        Inline code <code>const x = 42;</code>,
        <kbd>Ctrl</kbd> + <kbd>C</kbd>,
        <samp>output</samp>,
        <var>variable</var>.
      </p>

      <p>
        <ins>Inserted</ins> and <del>deleted</del> text.
      </p>

      <ruby>
        漢 <rt>kan</rt>
      </ruby>

      <blockquote>
        <p>Blockquote example.</p>
        <footer>— Author</footer>
      </blockquote>

      <address>
        <a href="mailto:test@example.com">test@example.com</a>
      </address>
    </section>

    <!-- LISTS -->

    <section id="lists">
      <h2>Lists</h2>

      <ul>
        <li>Unordered</li>
        <li>
          Nested
          <ul>
            <li>Level 2</li>
          </ul>
        </li>
      </ul>

      <ol>
        <li>Ordered</li>
        <li>Second</li>
      </ol>

      <dl>
        <dt>Term</dt>
        <dd>Definition</dd>
      </dl>
    </section>

    <!-- TABLES -->

    <section id="tables">
      <h2>Tables</h2>

      <table>
        <caption>Table Example</caption>
        <thead>
          <tr>
            <th scope="col">A</th>
            <th scope="col">B</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">Row 1</th>
            <td>Data</td>
          </tr>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="2">Footer</td>
          </tr>
        </tfoot>
      </table>
    </section>

    <!-- MEDIA -->

    <section id="media">
      <h2>Media</h2>

      <figure>
        <picture>
          <source srcset="https://via.placeholder.com/400x200" />
          <img
            src="https://via.placeholder.com/400x200"
            alt="Placeholder"
            width="400"
            height="200"
          />
        </picture>
        <figcaption>Figure caption</figcaption>
      </figure>

      <video controls width="320"></video>
      <audio controls></audio>

      <iframe title="Example iframe" src="about:blank" width="300" height="150"
      ></iframe>

      <canvas width="150" height="100"></canvas>

      <svg width="100" height="100" role="img" aria-label="Circle">
        <circle cx="50" cy="50" r="40"></circle>
      </svg>
    </section>

    <!-- FORMS -->

    <section id="forms">
      <h2>Forms</h2>

      <form>
        <fieldset>
          <legend>Inputs</legend>

          <label>
            Text
            <input type="text" />
          </label>

          <label>
            Search
            <input type="search" />
          </label>

          <label>
            Email
            <input type="email" />
          </label>

          <label>
            URL
            <input type="url" />
          </label>

          <label>
            Number
            <input type="number" />
          </label>

          <label>
            Range
            <input type="range" />
          </label>

          <label>
            Date
            <input type="date" />
          </label>

          <label>
            Color
            <input type="color" />
          </label>

          <label>
            Datalist
            <input list="options" />
            <datalist id="options">
              <option value="Option 1"></option>
              <option value="Option 2"></option>
            </datalist>
          </label>

          <label>
            Select
            <select>
              <optgroup label="Group">
                <option>Option A</option>
              </optgroup>
            </select>
          </label>

          <label>
            Textarea
            <textarea rows="3"></textarea>
          </label>

          <label><input type="checkbox" /> Checkbox</label>
          <label><input type="radio" name="r" /> Radio</label>

          <output>Output</output>

          <button type="submit">Submit</button>
        </fieldset>
      </form>
    </section>

    <!-- INTERACTIVE -->

    <section id="interactive">
      <h2>Interactive</h2>

      <details>
        <summary>Toggle</summary>
        <p>Hidden content</p>
      </details>

      <dialog open>Dialog (open)</dialog>

      <progress value="70" max="100">70%</progress>
      <meter min="0" max="100" value="60">60</meter>

      <button popovertarget="popover">Toggle Popover</button>
      <div id="popover" popover>Popover content</div>
    </section>

    <!-- MISC -->

    <section id="misc">
      <h2>Miscellaneous</h2>

      <aside>Aside block</aside>

      <time datetime="2026-01-01">January 1, 2026</time>
      <data value="42">Forty-two</data>

      <template>
        <p>Template content</p>
      </template>
    </section>

    <footer>
      <p class="text-muted">End of markup test page.</p>
    </footer>
  </article>
</Layout>
