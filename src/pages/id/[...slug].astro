---
export const prerender = false;

const slug = Astro.params.slug.join("/");
const url = `https://goude.se/id/${slug}`;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Link: {url}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script
      src="https://cdn.jsdelivr.net/npm/qrcode@1.5.1/build/qrcode.min.js"
      defer></script>
    <style>
      body {
        font-family: sans-serif;
        text-align: center;
        padding: 2rem;
        background: #fdfcf8;
      }
      canvas {
        margin-top: 1.5rem;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.15);
      }
      code {
        font-size: 1.2rem;
        background: #eee;
        padding: 0.2em 0.4em;
        border-radius: 4px;
      }
    </style>
  </head>
  <body>
    <h1>QR for</h1>
    <code>{url}</code>
    <canvas id="qr"></canvas>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const canvas = document.getElementById("qr");
        const text = location.href;
        QRCode.toCanvas(canvas, text, { margin: 2 });
      });
    </script>
  </body>
</html>
