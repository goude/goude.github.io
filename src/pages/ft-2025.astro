      .divider {
        width: 60%;
        height: 2px;
        background: gold;
        margin: 20px auto;
        opacity: 0.5;
        position: relative;
      }

      .divider::before,
      .divider::after {
        content: "âaS";
        position: absolute;
        top: -8px;
        font-size: 1.2em;
        color: gold;
      }

      .divider::before {
        left: -20px;
      }

      .divider::after {
        right: -20px;
      }

